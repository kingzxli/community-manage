<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.community.mapper.UserMapper">

	<select id="selectByOpenId" resultType="com.community.entity.User">
		SELECT
			*
		FROM			
			user 
		WHERE
			is_delete = 0		
			AND open_id = #{openId}	
	</select>
	
	<select id="selectByPhone" resultType="com.community.entity.User">
		SELECT
			*
		FROM			
			user 
		WHERE
			is_delete = 0		
			AND phone = #{phone}	
	</select>
	

</mapper>
	
	
	
	
	